<form method="post" action="{{ actionUrl('plugins/save-plugin-settings') }}" accept-charset="UTF-8">
    {{ csrfInput() }}
    <input type="hidden" name="pluginHandle" value="diffbase">
    {{ redirectInput('settings/plugins/diffbase') }}

    <div class="grid">
        <div class="item" data-colspan="2">

            {% if settings.apiKey %}
                <div class="field">
                    <div class="heading">
                        <label>API-Key</label>
                        <div class="instructions">
                            <p>Verwenden Sie diesen Key für API-Anfragen.</p>
                        </div>
                    </div>
                    <div class="input">
                        <div class="flex" style="gap: 10px; align-items: center;">
                            <input type="text" value="{{ settings.apiKey }}" readonly class="text fullwidth" id="apiKeyField">

                            <button type="button" class="btn secondary" onclick="copyApiKey()">
                                Kopieren
                            </button>

                            <form method="post" action="{{ actionUrl('_diffbase/cp/generate-api-key') }}" style="display: inline;">
                                {{ csrfInput() }}
                                {{ redirectInput('settings/plugins/diffbase') }}
                                <button type="submit" class="btn submit">
                                    Neuen API-Key generieren
                                </button>
                            </form>

                            <a href="{{ siteUrl }}api/info?key={{ settings.apiKey }}" class="view-btn btn" target="_blank">
                                {{ svg('@appicons/external-link.svg') }}
                                API-Endpunkt aufrufen
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="field">
                    <div class="heading">
                        <label>API-Key</label>
                        <div class="instructions">
                            <p>Generieren Sie einen API-Key für die Verwendung.</p>
                        </div>
                    </div>
                    <div class="input">
                        <form method="post" action="{{ actionUrl('_diffbase/cp/generate-api-key') }}">
                            {{ csrfInput() }}
                            {{ redirectInput('settings/plugins/diffbase') }}
                            <button type="submit" class="btn submit">
                                API-Key generieren
                            </button>
                        </form>
                    </div>
                </div>
            {% endif %}

            <hr>

            <div class="buttons">
                <button type="submit" class="btn submit">Einstellungen speichern</button>
            </div>
        </div>
    </div>
</form>

<script>
    function copyApiKey() {
        const field = document.getElementById('apiKeyField');
        field.select();
        document.execCommand('copy');

        Craft.cp.displayNotice('API-Key in Zwischenablage kopiert');
    }
</script>
